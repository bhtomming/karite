{% extends 'admin/base.twig' %}
{% block content %}
<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    分类设置
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin">管理首页</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-list"></i> <a href="/admin/category" >分类列表</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-edit"></i>添加分类
                    </li>
                </ol>
            </div>
        </div>
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">

                <form class="form-horizontal" action="/admin/category/add" method="post">
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="ename" contenteditable="true">英文名</label>
                            <div class="col-sm-8">
                                <input name="ename" class="form-control" placeholder="英文名" type="text">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="name" contenteditable="true">类别名</label>
                            <div class="col-sm-8">
                                <input name="name" class="form-control" placeholder="类别名" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="description" contenteditable="true">分类描述</label>
                            <div class="controls col-sm-8">
                                <input name="description" class="form-control" placeholder="分类描述" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="seotitle" contenteditable="true">SEO标题</label>
                            <div class="controls col-sm-8">
                                <input name="seotitle" class="form-control" placeholder="SEO标题" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="seokeyword" contenteditable="true">SEO关键字</label>
                            <div class="controls col-sm-8">
                                <input name="seokeyword" class="form-control" placeholder="SEO关键字" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="controls  col-sm-offset-5">
                                <button type="submit" class="btn btn-primary" contenteditable="true">确定</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
{% endblock %}