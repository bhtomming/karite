{% extends 'admin/base.twig' %}
{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        图片设置
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="index.html">管理首页</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i> 图片设置
                        </li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form class="form-horizontal">
                        <div id="legend" class="">
                            <legend class="">缩略图设置</legend>
                        </div>
                        <div class="col-sm-4">
                            <div class="row">
                                <div class="form-group">
                                    <label for="thum_atc_w" class="col-sm-3 control-label">文章缩略图</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_atc_w" placeholder="163">
                                    </div>
                                    <label for="thum_atc_h" class="col-sm-1 control-label">X</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_atc_h" placeholder="124">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="thum_prd_w" class="col-sm-3 control-label">产品缩略图</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_prd_w" placeholder="150">
                                    </div>
                                    <label for="thum_prd_h" class="col-sm-1 control-label">X</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_prd_h" placeholder="150">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="thum_tuji_w" class="col-sm-3 control-label">图集缩略图</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_tuji_w" placeholder="150">
                                    </div>
                                    <label for="thum_tuji_h" class="col-sm-1 control-label">X</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control" id="thum_tuji_h" placeholder="150">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="thum_tuji_w" class="col-sm-3 control-label">缩略图质量</label>
                                    <div class="col-sm-5">
                                        <input type="text" class="form-control" id="thum_tuji_w" placeholder="150">
                                    </div>
                                </div>

                                <div id="legend" class="">
                                    <legend class="">水印设置</legend>
                                </div>

                                <div class="control-group">
                                    <label class="control-label col-sm-3">水印位置</label>
                                    <div class="controls">
                                        <!-- Multiple Radios -->
                                        <label class="radio-inline col-sm-4">
                                            <input type="radio" value="关闭" name="shuiyi" checked="checked">
                                            关闭
                                        </label>
                                        <label class="radio-inline col-sm-4">
                                            <input type="radio" value="随机" name="shuiyi">
                                            随机
                                        </label>
                                        <div class="row">
                                            <label class="radio-inline col-sm-offset-3 col-sm-2">
                                                <input type="radio" value="#1" name="shuiyi">
                                                #1
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#2" name="shuiyi">
                                                #2
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#3" name="shuiyi">
                                                #3
                                            </label>
                                        </div>
                                        <div class="row">
                                            <label class="radio-inline col-sm-offset-3 col-sm-2">
                                                <input type="radio" value="#4" name="shuiyi">
                                                #4
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#5" name="shuiyi">
                                                #5
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#6" name="shuiyi">
                                                #6
                                            </label>
                                        </div>
                                        <div class="row">
                                            <label class="radio-inline col-sm-offset-3 col-sm-2">
                                                <input type="radio" value="#7" name="shuiyi">
                                                #7
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#8" name="shuiyi">
                                                #8
                                            </label>
                                            <label class="radio-inline col-sm-2">
                                                <input type="radio" value="#9" name="shuiyi">
                                                #9
                                            </label>
                                        </div>

                                        <div class="form-group">
                                            <label for="tmdu" class="col-sm-3 control-label">水印透明度</label>
                                            <div class="col-sm-5">
                                                <input type="text" class="form-control" id="tmdu" placeholder="60">
                                            </div>
                                        </div>

                                        <div class="control-group">
                                            <label class="control-label   col-sm-3">水印文件</label>
                                            <!-- File Upload -->
                                            <div class="controls  col-sm-3">
                                                <input class="input-file" id="fileInput" type="file">
                                            </div>
                                        </div>

                                    </div>
                                </div>

                            </div>
                         </div>


                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                <button type="submit" class="btn btn-primary">保存</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}