{% extends 'admin/base.twig' %}
{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        链接设置
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="/admin">管理首页</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i> 链接设置
                        </li>
                    </ol>
                </div>
            </div>


            <div class="row">
                <div class="col-lg-6">
                    <form class="form-horizontal">
                        <fieldset>

                            <div class="control-group">
                                <label class="control-label">链接形式</label>
                                <div class="controls">
                                    <!-- Multiple Radios -->
                                    <label class="radio-inline">
                                        <input type="radio" value="动态" name="链接" checked="checked">
                                        动态
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" value="静态" name="链接">
                                        静态
                                    </label>
                                </div>

                            </div>

                            <div class="control-group">
                                <button type="submit" class="btn btn-primary">保存</button>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}