{% extends 'admin/ueditorbase.twig' %}
{% block content %}

    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {{ pagename }}
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="/admin">管理首页</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-list"></i> <a href="/admin/{{ page }}" >{{ pagename }}列表</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i>添加{{ pagename }}
                        </li>
                    </ol>
                </div>
            </div>
            <!-- Page Heading -->
            <div class="row">
                <form name="article" class="form-horizontal" action="{{ action }}" method="post">
                    <div class="col-lg-8 col-lg-offset-2">
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="title" contenteditable="true">品牌名称</label>
                                <div class="col-sm-8">
                                    <input name="title" id="title" class="form-control" placeholder="品牌名称" type="text" value="{{ brand.title ? brand.title : "" }}">
                                </div>
                            </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">品牌照片</label>
                            <!-- File Upload -->
                            <div class="controls col-sm-8 ">
                                <div class="editImg">
                                {% if brand.ttimg %}
                                    {% for imgpath in brand.ttimg %}
                                        <div class="previewImg">
                                            <div class="file-preview-frame">
                                                <img src="{{ imgpath }}" width="140" height="140" class="img-thumbnail"/>
                                                <div class="file-thumbnail-footer">
                                                    <div class="file-actions">
                                                        <div class="file-footer-buttons">
                                                            <button type="button" class="kv-file-remove btn btn-xs btn-default" title="删除文件">
                                                                <i class="glyphicon glyphicon-trash text-danger"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}
                                </div>
                                <input name="ttimg" value="{{ brand.ttimg ? brand.ttimg : "" }}" class="fileInput" id="fileInput" type="file"  placeholder="上传缩略图" accept="image/*" multiple>
                                <input name="imgpath" class="hidden" id="imgpath" type="text" value="{% for path in brand.ttimg %}{{ path }},{% endfor %}">
                                <p class="help-block">建议图片大小为600*400，最多能传六张照片</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="description" contenteditable="true">品牌描述</label>
                            <div class="col-sm-8 textarea">
                                <textarea name="description" type="textarea" rows="5" class="form-control" > {{ brand.description ? brand.description : "" }}</textarea>
                                <p class="help-block">使用简短的语言描述加盟的品牌</p>
                            </div>
                        </div>
                    </div>
                        <div class="form-group col-lg-8">
                            <div class="controls  col-sm-offset-5">
                                <button type="submit" class="btn btn-primary" contenteditable="true">确定</button>
                            </div>
                        </div>

                </form>
            </div>
        </div>
    </div>

{% endblock %}
{% block customjs  %}

    <script type="text/javascript" src="/js/brandloadfile.js" ></script>
{% endblock %}