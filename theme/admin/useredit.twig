{% extends 'admin/base.twig' %}
{% block content %}
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        内容管理
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="/admin">管理首页</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-list"></i><a href="/admin/user" > 用户列表</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i>添加用户
                        </li>
                    </ol>
                </div>
            </div>
            <!-- Page Heading -->
            <div class="row">
                <form id="user" name="user" class="form-horizontal" action="/user/edit/{{ user.id }}" method="post">
                    <div class="form-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="uname">用户名</label>
                        <div class="controls col-sm-8">
                            <input type="text" placeholder="{{ user.name }}" name="uname" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Textarea -->
                        <label class="control-label col-sm-2">旧密码</label>
                        <div class="controls col-sm-8">
                            <div class="textarea">
                                <input type="password" name="oldpwd" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Textarea -->
                        <label class="control-label col-sm-2">新密码</label>
                        <div class="controls col-sm-8">
                            <div class="textarea">
                                <input type="password" name="pwd" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Textarea -->
                        <label class="control-label col-sm-2">确认新密码</label>
                        <div class="controls col-sm-8">
                            <div class="textarea">
                                <input type="password" name="repwd" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">邮箱</label>
                        <div class="controls col-sm-8">
                            <input type="text" placeholder="{{ user.email }}" name='email' class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">手机号</label>
                        <div class="controls col-sm-8">
                            <input type="text" placeholder="{{ user.phone }}" name="phone" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-lg-10">
                        <div class="controls  col-sm-offset-5">
                            <button type="submit" class="btn btn-primary" contenteditable="true">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}