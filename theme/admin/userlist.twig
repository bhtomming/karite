{% extends 'admin/base.twig' %}
{% block content %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        用户管理
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="/admin">管理首页</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-list"></i> 用户列表
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i><a href="/admin/user/add" >添加用户</a>
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /Page Heading -->
            {{ message }}
            <table class="table table-striped" contenteditable="true">
                <thead>
                <tr>
                    <th>用户ID</th>
                    <th>用户名</th>
                    <th>邮箱</th>
                    <th>手机</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                {% for row, user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.uname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phone }}</td>
                    <td>
                        <button class="btn btn-info view" data-id="{{ user.id }}" type="button">查看</button>
                        <button  class="btn btn-reddit edit" data-id="{{ user.id }}" type="button">修改</button>
                        <button class="btn btn-danger del" data-id="{{ user.id }}" type="button">删除</button>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <!-- /.container-fluid -->
    </div>

{% endblock %}
{% block customjs  %}
<script src="/js/opation.js"></script>
{% endblock %}

