{% extends 'admin/base.twig' %}
{% block head %}
    <link href="/css/fileinput.css" media="all" rel="stylesheet" type="text/css" />
    <script src="/js/fileinput.js" type="text/javascript"></script>
    <!--简体中文-->
    <script src="/js/locales/zh.js" type="text/javascript"></script>
{% endblock %}
{% block content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    基本设置
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/admin/">管理首页</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-edit"></i> 基本设置
                    </li>
                </ol>
            </div>
        </div>
        {% if message %}
        <p class="{{ status }}">{{ message }}</p>
        {% endif %}
        <div class="row">
            <div class="col-lg-6">
            <form class="form-horizontal" name="webset" action="/admin/site/" method="post">
                <fieldset>
                    <div class="form-group">
                        <label class="control-label col-sm-2">网站Logo</label>
                        <!-- File Upload -->
                        <div class="controls col-sm-10 ">
                            {% if site.logo %}
                                <img src="{{ site.logo }}" class="file-preview-image" id="preview"/>
                            {% endif %}
                            <input name="logo" value="{{ site.logo ? site.logo : "" }}" class="fileInput" id="fileInput" type="file"  placeholder="上传Logo缩略图">
                            <input name="logopath" class="hidden" id="logopath" type="text" value="{{ site.logo ? site.logo : "" }}">
                            <p class="help-block">网站的LOGO尺寸为:270*60</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label  col-sm-2" for="input01">网站名称:</label>
                        <div class="controls  col-sm-10">
                            <input name="sitename" type="text" placeholder="请输入您的网站名称" class="form-control" value="{{ site.name }}">
                            <p class="help-block">网站的名称</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label  col-sm-2" for="input01">网站副标题:</label>
                        <div class="controls  col-sm-10">
                            <input name="slogan" type="text" placeholder="请输入您的网站副标题" class="form-control" value="{{ site.slogan }}">
                            <p class="help-block">副标题可以对网站进行简短的说明</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label  col-sm-2" for="input01">网站域名:</label>
                        <div class="controls col-sm-10">
                            <input name="domain" type="text" placeholder="请输入您的网站域名" class="form-control" value="{{ site.domain }}">
                            <p class="help-block">域名如：www.xxx.com,不需要写http://</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">附件地址:</label>
                        <div class="controls col-sm-10">
                            <input name="fujian" type="text" placeholder="/upload/images/" class="form-control" value="{{ site.fujian }}">
                            <p class="help-block">这里的地址是相对网站路径的，以“/”开头,一般不需要修改</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">管理邮箱:</label>
                        <div class="controls col-sm-10">
                            <input name="email" type="text" placeholder="请输入管理员的邮箱号" class="form-control" value="{{ site.email }}">
                            <p class="help-block">正确的邮箱号包含@字符</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">关键词:</label>
                        <div class="controls col-sm-10">
                            <input name="keywords" type="text" placeholder="请输入网站关键词" class="form-control" value="{{ site.keywords }}">
                            <p class="help-block">关键词是别人在搜索您的网站时进行匹配</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Textarea -->
                        <label class="control-label col-sm-2">品牌描述:</label>
                        <div class="controls col-sm-10">
                            <div class="textarea">
                                <textarea name="description" type="textarea" rows="5" class="form-control" > {{ site.description }}</textarea>
                                <p class="help-block">用简短的语言描述公司品牌形象。</p>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">版权信息:</label>
                        <div class="controls col-sm-10">
                            <input name="copyright" type="text" placeholder="请输入网站版权信息声明" class="form-control" value="{{ site.copyright }}">
                            <p class="help-block">网站版权信息在网站底部显示</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">联系电话:</label>
                        <div class="controls col-sm-10">
                            <input name="tel" type="text" placeholder="请输入网站客服电话或联系电话" class="form-control" value="{{ site.tel }}">
                            <p class="help-block">网站联系电话显示在网站底部</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <!-- Text input-->
                        <label class="control-label col-sm-2" for="input01">备案号:</label>
                        <div class="controls col-sm-10">
                            <input name="beian" type="text" placeholder="请输入备案信息" class="form-control" value="{{ site.beian }}">
                            <p class="help-block">已经备案的请输入您的备案号</p>
                        </div>
                    </div>

                    <div class="control-group">
                        <button type="submit" class="btn btn-primary col-sm-offset-11">保存</button>
                    </div>

                </fieldset>
            </form>
            </div>
        </div>

{% endblock %}
{% block customjs  %}
    <script type="text/javascript" src="/js/loadLogo.js" ></script>
{% endblock %}
