{% extends 'admin/listbase.twig' %}
{% block content %}
            <!-- Page Heading -->

            <div class="row">
                <table class="table table-striped" contenteditable="true">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>电话</th>
                        <th>地址</th>
                        <th>内容</th>
                        <th>时间</th>
                        <th>姓名</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                      {% for row, news in newslist %}
                    <tr>
                        <td>{{ news.id }}</td>
                        <td>{{ news.phone }}</td>
                        <td>{{ news.address }}</td>
                        <td>{{ news.content }}</td>
                        <td>{{ news.createtime }}</td>
                        <td>{{ news.name }}</td>
                        <td>
                            <button class="btn btn-info view" data-id="{{ news.id }}" type="button">查看</button>
                            <button class="btn btn-reddit edit" data-id="{{ news.id }}" type="button">修改</button>
                            <button class="btn btn-danger del" data-id="{{ news.id }}" type="button">删除</button>
                        </td>
                    </tr>
                     {% endfor %}

                    </tbody>
                </table>
            </div>

{% endblock %}